<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.geckour.q.R" />

        <variable
            name="currentDomainTrack"
            type="com.geckour.q.domain.model.DomainTrack" />

        <variable
            name="isPlaying"
            type="Boolean" />

        <variable
            name="isTouchLocked"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sheet_background"
        android:clickable="true"
        android:elevation="40dp"
        android:focusable="true"
        android:theme="?attr/bottomSheetStyle"
        app:layoutDescription="@xml/bottom_sheet_motion"
        tools:ignore="Overdraw">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_peek_height"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_artwork_end"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/artwork"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_track"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@{currentDomainTrack.title}"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="12sp"
            tools:text="曲タイトル" />

        <TextView
            android:id="@+id/text_artist_and_album"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@{currentDomainTrack == null ? null : @string/track_item_artist_and_album(currentDomainTrack.artist.title, currentDomainTrack.album.title)}"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="10sp"
            tools:text="アーティスト名アーティスト名アーティスト名 - アルバム名" />

        <ImageView
            android:id="@+id/button_controller_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_backward"
            app:tintAttr="@{currentDomainTrack != null ? R.attr.colorButtonNormal : R.attr.colorInactive}"
            tools:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/button_controller_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@{isPlaying ? @drawable/ic_pause : @drawable/ic_play}"
            app:tintAttr="@{currentDomainTrack != null ? R.attr.colorButtonNormal : R.attr.colorInactive}"
            tools:src="@drawable/ic_pause"
            tools:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/button_controller_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_forward"
            app:tintAttr="@{currentDomainTrack != null ? R.attr.colorButtonNormal : R.attr.colorInactive}"
            tools:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/button_repeat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:visibility="gone"
            app:tint="?attr/colorAccent"
            tools:src="@drawable/ic_repeat_off"
            tools:tint="@color/colorAccent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/button_shuffle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_shuffle"
            app:tintAttr="@{currentDomainTrack != null ? R.attr.colorAccent : R.attr.colorInactive}"
            tools:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/button_share"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_share"
            app:tintAttr="@{currentDomainTrack != null ? R.attr.colorAccent : R.attr.colorInactive}"
            tools:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/button_toggle_visible_queue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_queue"
            app:tint="?attr/colorAccent" />

        <TextView
            android:id="@+id/text_time_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:textAlignment="viewEnd"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="12sp"
            tools:text="0:51" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="10000"
            android:progressBackgroundTint="?attr/colorBackgroundProgress"
            android:progressTint="?attr/colorButtonNormal"
            app:thumbTintAttr="@{currentDomainTrack != null ? R.attr.colorButtonNormal : R.attr.colorInactive}"
            tools:progress="2000" />

        <TextView
            android:id="@+id/text_time_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="12sp"
            tools:text="3:12" />

        <TextView
            android:id="@+id/file_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{currentDomainTrack == null ? null : @string/track_file_info(currentDomainTrack.codec, currentDomainTrack.bitrate, currentDomainTrack.sampleRate)}"
            android:textAlignment="viewEnd"
            android:textSize="10sp"
            tools:text="Apple Lossless・1091bps・44.1kHz" />

        <ImageView
            android:id="@+id/button_scroll_to_current"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_current"
            app:tintAttr="@{currentDomainTrack != null ? R.attr.colorAccent : R.attr.colorInactive}"
            tools:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/text_time_total"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="12sp"
            tools:text="Total・1:34:28" />

        <TextView
            android:id="@+id/text_time_remain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="12sp"
            tools:text="Remain・-57:12" />

        <ImageView
            android:id="@+id/button_touch_lock"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_touch_lock"
            app:tintAttr="@{isTouchLocked ? R.attr.colorAccent : R.attr.colorInactive}"
            tools:tint="@color/colorInactive" />

        <ImageView
            android:id="@+id/button_clear_queue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_remove"
            app:tintAttr="@{currentDomainTrack != null ? R.attr.colorAccent : R.attr.colorInactive}"
            tools:tint="@color/colorAccent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_track" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>