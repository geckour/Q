<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorStrong">@color/colorStrong</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="searchViewStyle">@style/SearchStyle</item>
        <item name="colorInactive">@color/colorInactive</item>
        <item name="colorOption">@color/colorOption</item>
        <item name="colorWeakAccent">@color/colorWeakAccent</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorTextStrong">@color/colorTextStrong</item>
        <item name="colorTextSettingNormal">@color/colorPrimary</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundInactive">@color/colorBackgroundInactive</item>
        <item name="colorBackgroundBottomSheet">@color/colorBackgroundBottomSheet</item>
        <item name="colorBackgroundSearch">@color/colorBackgroundSearch</item>
        <item name="colorBackgroundNavItem">@color/colorWeakAccent</item>
        <item name="colorBackgroundProgress">@color/colorBackgroundProgress</item>
        <item name="colorTransparent">@android:color/transparent</item>
        <item name="colorShadowBottomSheetStart">@color/colorShadowBottomSheetStart</item>
        <item name="colorShadowBottomSheetCenter">@color/colorShadowBottomSheetCenter</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorEqualizerScale">@color/colorEqualizerScale</item>
    </style>

    <style name="SearchStyle" parent="AppTheme">
        <item name="android:colorBackground">?attr/colorBackgroundSearch</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
